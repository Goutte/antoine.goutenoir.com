{% extends "::base.html.twig" %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('bundles/gouttedoodle/compass/stylesheets/views/doodle.css') }}" />
{% endblock %}

{% block body %}

<header>

  <div id="whoami" class="contentFrame">
    <h1>A<span class="discreet">ntoine</span> G<span class="discreet">outenoir</span></h1>
    <h2><span class="discreet">Thinker, WebSmith</span></h2>
    <span id="framerate"></span>{# For perf-test, 'tis 62 right now #}
  </div>

</header>

<div role="main">

  <a id="shareOnGithub" href="https://github.com/Goutte/antoine.goutenoir.com">
    <img src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png" alt="Fork me on GitHub" />
  </a>

  <canvas id="doodleHoldingCanvas" resize></canvas>
  <canvas id="doodleDrawingCanvas" resize></canvas>

  <div id="controls">
    <form action="#" id="formSend" class="hiddenSmall">
      <p>
        <strong>Who are you ?<br />What do you want ?</strong>
      </p>
      <textarea name="message" rows="9"></textarea><br />
      <input type="submit" value="SEND" />
    </form>
    <a href="#" id="buttonSend" class="hiddenSmall button" title="Send it to me along with a message"></a>
    <a href="#" id="buttonView" class="hiddenSmall button" title="View doodle in new tab" target="_blank" ></a>
    <a href="#" id="buttonDown" class="hiddenSmall button" title="Download as PNG"></a>
    <a href="#" id="buttonUndo" class="hiddenSmall button" title="[z] Undo the last path"></a>
    <a href="#" id="buttonSave" class="hiddenSmall button" title="Save your doodle to /dev/floppy"></a>
  </div>

  <div id="notifications"></div>

</div>

<footer></footer>

{% endblock %}


{% block javascripts %}
  <script type="text/javascript"  src="{{ asset('bundles/gouttedoodle/js/libs/Notifications.js') }}"></script>
  <script type="text/javascript"  src="{{ asset('bundles/gouttedoodle/js/libs/AppManager.js') }}"></script>
  <script type="text/javascript"  src="{{ asset('bundles/gouttedoodle/js/doodle.js') }}"></script>
  <script type="text/paperscript" src="{{ asset('bundles/gouttedoodle/js/drawingPaperscript.js') }}" canvas="doodleDrawingCanvas"></script>
  <script type="text/paperscript" src="{{ asset('bundles/gouttedoodle/js/holdingPaperScript.js') }}" canvas="doodleHoldingCanvas"></script>
{% endblock %}

